<div class="container">
  <h1>Restaurants 🍽</h1>
  <ul>
    <% @restaurants.each do |restaurant| %>
      <li><%= link_to restaurant.name, restaurant_path(restaurant), class: 'btn btn-link"' %></li>
    <% end %>
  </ul>
  <br>
  <%= link_to "Create New", new_restaurant_path(@restaurants), class: 'btn btn-success' %>
</div>
